<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 白色背景 -->
    <solid android:color="#FFFFFF" />
    <!-- 灰色边框 -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />
    <!-- 可选：圆角 -->
    <corners android:radius="4dp" />
    <!-- 可选：内边距 -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
